extends ../layout/default.jade

block content
    - var canEdit = req.user.hasPermission('system.widgets.toggle');
    .panel.panel-primary
        .panel-heading
            | Visible Widgest
        table.table
            thead
                th Controller
                th Action
                if canEdit
                    th Actions
            tbody
                each widget in visible
                    tr
                        td= widget.controller
                        td= widget.action
                        if canEdit
                            td
                                a.btn.btn-primary.fa.fa-pencil(href='/widgets/' + command.id + '/hide')
