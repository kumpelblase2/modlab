<% if (errors) {%>
  <% errors.forEach(function (error) { %>
    <%= __(error) %>
  <% }) %>
<% } %>

<div class="row col-md-4 col-md-offset-4">
    <%- partial('../elements/form', [{
        action: '/auth/local/register',
        method: 'post',
        controls: [
            {
                kind: 'input',
                type: 'text',
                name: 'username',
                placeholder: 'Username'
            },
            {
                kind: 'input',
                type: 'text',
                name: 'email',
                placeholder: 'Email'
            },
            {
                kind: 'input',
                type: 'password',
                name: 'password',
                placeholder: 'Password'
            },
            {
                kind: 'button',
                type: 'submit',
                name: 'register',
                style: 'primary col-md-12',
                value: 'Register'
            }
        ]
    }]) %>
</div>
