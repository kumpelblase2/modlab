<% if (errors) {%>
  <% errors.forEach(function (error) { %>
    <%- partial('../elements/alert', [{ type: 'danger', message: __(error) }]) %>
  <% }) %>
<% } %>
<div class="row col-md-4 col-md-offset-4">
    <%- partial('../elements/form',[{
        action: '/auth/local',
        method: 'post',
        controls: [
            {
                kind: 'input',
                type: 'text',
                name: 'identifier',
                placeholder: 'Username or Email'
            },
            {
                kind: 'input',
                type: 'password',
                name: 'password',
                placeholder: 'Password'
            },
            {
                kind: 'button',
                type: 'submit',
                style: 'primary col-md-12',
                name: 'login',
                value: 'Sign in'
            }
        ]
    }]) %>

    <% if (providers) {%>
      <h4>Or you can login via:</h4>

      <% Object.keys(providers).forEach(function (key) { %>
          <a href="/auth/<%= providers[key].slug %>" role="button" class="btn btn-default col-md-12" style="background-color: #6441A5; color: white;"><%= providers[key].name %></a>
      <% }) %>
    <% } %>
</div>
