mixin notification(url, icon, message, time)
    a(href=url)
        div
            i.fa.fa-fa(class='fa-' + icon)= message
            span.pull-right.text-muted.small
                = time

if req.isAuthenticated()
    li.dropdown#notification_menu
        a.dropdown-toggle(data-toggle='dropdown', href='#')
            i.fa.fa-bell.fa-fw
            i.fa.fa-caret-down
        ul.dropdown-menu.dropdown-alerts#notifications
            li.divider
            li
                a.text-center(href='/notifications')
                    strong See All Notifications
                    i.fa.fa-angle-right
